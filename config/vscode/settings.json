{
  "workbench.colorCustomizations": {
    // non-standard, transparency patched version only
    "workbench.background": "#46575e33",

    // VSC colors
    // ref: https://code.visualstudio.com/api/references/theme-color
    "activityBar.background": "#46575e33",
    "button.background": "#00000000",
    "button.hoverBackground": "#00000000",

    "editor.background": "#00000011",
    "editor.lineHighlightBackground": "#FFFFFF15",
    "editorGroupHeader.tabsBackground": "#00000050",
    "tab.activeBackground": "#ffffff11",
    "tab.inactiveBackground": "#00000020",
    "tab.border": "#00000000",

    "list.activeSelectionBackground": "#00000000",
    "list.hoverBackground": "#00000040",
    "list.inactiveSelectionBackground": "#00000040",

    "panel.background": "#00000010",
    "panel.border": "#00000000",
    "panelSectionHeader.border": "#00000000",

    "sideBar.background": "#46575e33",
    "sideBarSectionHeader.background": "#00000000",
    "sideBar.border": "#00000000",

    "statusBar.background": "#00000080",
    "statusBar.noFolderBackground": "#4a7d8680",
    "statusBar.border": "#00000000",
    "terminal.background": "#00000001",
    "titleBar.activeBackground": "#40606100",
    "titleBar.inactiveBackground": "#00000000",
    "menu.background": "#24353cdd",

    "menubar.selectionBackground": "#00575e33"
  },
  "editor.tokenColorCustomizations": {
    "comments": "#ffffffaa"
  },

  "window.titleBarStyle": "custom",
  "breadcrumbs.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  "window.menuBarVisibility": "compact",
  "explorer.confirmDelete": false,
  "editor.fontFamily": "Hermit",
  "workbench.layoutControl.enabled": false,
  "terminal.integrated.fontFamily": "Hermit Light",
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "workbench.colorTheme": "SynthWave '84",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "editor.inlayHints.enabled": "off",
  "redhat.telemetry.enabled": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.detectIndentation": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "terminal.integrated.cursorStyle": "line",
  "window.zoomLevel": 1,
  "macros": {
    "make": [
      {
        "command": "workbench.action.terminal.sendSequence",
        "args":{ "text":"make\u000d" }
      },
    ]
  },
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
}
