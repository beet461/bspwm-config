
# Play/Pause
XF86AudioPlay
        playerctl play-pause

# Next/Previous
XF86Audio{Next,Prev}
        playerctl {next,previous}

# Adjust Brightness
XF86MonBrightness{Up,Down}
        backlight_control {+,-}1

# Alternatives for when XF86 keys are not available

# Adjust volume
mod4 + {g,v}
        amixer set Master 5%{+,-}

# Mute/Unmute
mod4 + b
        pulsemixer --toggle-mute

# Play/Pause
mod4 + c
        playerctl play-pause

# Next/Previous
mod4 + {x,z}
        playerctl {next,previous}

# Adjust Brightness
mod4 + {j,n}
        backlight_control {+,-}1
